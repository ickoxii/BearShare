root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[{*.toml,*.json,*.yml}]
indent_size = 4
indent_style = space

[{*.js,*.jsx,*.ts,*.tsx,*.html}]
indent_size = 2
indent_style = space
